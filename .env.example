# Alpaca API credentials
ALPACA_API_KEY=your_api_key_here
ALPACA_API_SECRET=your_api_secret_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets
ALPACA_DATA_URL=https://data.alpaca.markets

# Optional: Email notification settings
ENABLE_NOTIFICATIONS=false
NOTIFICATION_EMAIL=your_email@example.com
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your_username
SMTP_PASSWORD=your_password

# Optional: ML Strategy settings (for future implementation)
ML_STRATEGY_TYPE=ensemble
ML_LOOKBACK_PERIOD=60
ML_RETRAIN_FREQUENCY=7
ML_CONFIDENCE_THRESHOLD=0.65
# Optional: Trading frequency settings
RUN_FREQUENCY=minutes
RUN_INTERVAL=15

# YFinance DB Service settings
USE_YFINANCE_DB=false
YFINANCE_DB_HOST=yfinance-db
YFINANCE_DB_PORT=8000
MAX_DB_SIZE_GB=10
FETCH_INTERVAL_MINUTES=60
SYMBOLS=AAPL,MSFT,AMZN,GOOGL,META
RUN_INTERVAL=15